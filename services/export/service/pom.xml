				<exclusion>
					<artifactId>jboss-remoting</artifactId>
					<groupId>jboss</groupId>
				</exclusion>
			</exclusions>
		</dependency>

	</dependencies>

	<build>
		<finalName>collectionspace-services-export</finalName>
	</build>
</project>
