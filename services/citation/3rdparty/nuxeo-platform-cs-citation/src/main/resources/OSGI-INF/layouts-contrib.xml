      <widget name="termStatus" type="text">
        <labels>
          <label mode="any">termStatus</label>
        </labels>
        <translated>true</translated>
        <fields>
          <field schema="citations_common">termStatus</field>
        </fields>
        <properties widgetMode="edit">
